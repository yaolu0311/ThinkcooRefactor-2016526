<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_group_introduction"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_144"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_143">

        <TextView
            android:id="@+id/group_infor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_44"
            android:text="@string/group_info"
            android:textColor="@color/text_1"
            android:textSize="@dimen/px_44"/>

        <TextView
            android:id="@+id/tv_group_introduction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_62"
            android:layout_marginRight="@dimen/px_13"
            android:layout_toLeftOf="@+id/item_group_introduction_arrow"
            android:layout_toRightOf="@+id/group_infor"
            android:ellipsize="end"
            android:gravity="right"
            android:textColor="@color/text_2"
            android:textSize="@dimen/px_36"/>

        <ImageView
            android:id="@+id/item_group_introduction_arrow"
            style="@style/icon_daYu"/>
    </RelativeLayout>

    <View
        style="@style/line_horizontal"/>
</LinearLayout>