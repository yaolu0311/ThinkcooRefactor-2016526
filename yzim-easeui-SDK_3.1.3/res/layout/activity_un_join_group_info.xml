<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.yz.im.ui.activity.UnJoinGroupInfoActivity">

    <include
        layout="@layout/layout_hx_title"/>

    <include
        layout="@layout/head_group_info"/>

    <include
        layout="@layout/item_group_name"/>

    <View
        style="@style/view_line_edge"/>

    <include
        layout="@layout/item_group_introduction"/>

    <View
        style="@style/view_line_edge"/>

    <include
        layout="@layout/item_group_member"/>

    <View
        style="@style/view_line_edge"/>

    <Button
        android:id="@+id/btn_apply_join"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_100"
        android:layout_marginLeft="@dimen/px_48"
        android:layout_marginRight="@dimen/px_48"
        android:layout_marginTop="@dimen/px_50"
        android:background="@drawable/selector_shape_round_blue"
        android:gravity="center"
        android:text="@string/apply_join"
        android:textColor="@android:color/white"
        android:textSize="@dimen/px_44"/>

</LinearLayout>
