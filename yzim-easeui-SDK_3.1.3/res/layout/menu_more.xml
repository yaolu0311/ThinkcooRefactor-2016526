<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px_350"
    android:layout_height="wrap_content"
    android:background="@drawable/style_menu_more"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_find_user_of_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/px_131"
            android:layout_height="@dimen/px_131"
            android:layout_marginLeft="@dimen/px_11"
            android:padding="@dimen/px_33"
            android:scaleType="centerInside"
            android:src="@drawable/menu_search"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_5"
            android:text="找人/圈子"
            android:textColor="@color/white"
            android:textSize="@dimen/px_36"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="#9e9e9e"/>

    <LinearLayout
        android:id="@+id/item_create_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/px_131"
            android:layout_height="@dimen/px_131"
            android:layout_marginLeft="@dimen/px_11"
            android:padding="@dimen/px_33"
            android:scaleType="centerInside"
            android:src="@drawable/create_group"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_5"
            android:text="创建圈子"
            android:textColor="@color/white"
            android:textSize="@dimen/px_36"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="#9e9e9e"/>

    <LinearLayout
        android:id="@+id/item_menu_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view02"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/px_131"
            android:layout_height="@dimen/px_131"
            android:layout_marginLeft="@dimen/px_11"
            android:padding="@dimen/px_33"
            android:scaleType="centerInside"
            android:src="@drawable/icon_collection"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_5"
            android:text="@string/collection"
            android:textColor="@color/white"
            android:textSize="@dimen/px_36"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="#9e9e9e"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/item_menu_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view03"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/px_131"
            android:layout_height="@dimen/px_131"
            android:layout_marginLeft="@dimen/px_11"
            android:padding="@dimen/px_33"
            android:scaleType="centerInside"
            android:src="@drawable/icon_menu_setting"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_5"
            android:text="@string/setting"
            android:textColor="@color/white"
            android:textSize="@dimen/px_36"/>

    </LinearLayout>

</LinearLayout>