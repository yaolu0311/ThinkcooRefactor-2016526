<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical">

    <include
        layout="@layout/layout_recommend_user"/>

    <RelativeLayout
        android:id="@+id/layout_msg_notice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_181"
        android:layout_marginTop="@dimen/px_20"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/img_msg_notice"
            android:layout_width="@dimen/px_197"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/index_img_headPortrait"
                style="@style/member_item_style"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_30"
                android:scaleType="centerInside"
                android:src="@drawable/message_notice"/>

            <TextView
                android:id="@+id/tv_new_message_notice"
                android:layout_width="@dimen/px_37"
                android:layout_height="@dimen/px_37"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px_10"
                android:layout_marginTop="@dimen/px_10"
                android:background="@drawable/icon_new_message"
                android:gravity="center"
                android:textSize="@dimen/px_37"
                android:visibility="gone"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_131"
            android:layout_marginLeft="@dimen/px_15"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_msg_notice">

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_5"
                android:layout_toRightOf="@id/avatar_container"
                android:text="@string/messages"
                android:textColor="@color/text_1"
                android:textSize="@dimen/px_44"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px_22"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/px_10"
                android:text="@string/show_verify_msg"
                android:textColor="@color/text_3"
                android:textSize="@dimen/px_32"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/line_1"/>

</LinearLayout>