<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_update_nickname"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_144"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_group_nickname"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_60"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/px_44"
        android:text="@string/modify_back"
        android:textColor="@color/text_1"
        android:textSize="@dimen/px_44"/>

    <ImageView
        android:id="@+id/iv_modify_name"
        style="@style/icon_daYu"/>

</RelativeLayout>