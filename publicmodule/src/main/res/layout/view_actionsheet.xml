<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp" >

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/action_sheet_top_normal"
        android:gravity="center"
        android:minHeight="@dimen/px_123"
        android:paddingBottom="@dimen/px_27"
        android:paddingLeft="@dimen/px_41"
        android:paddingRight="@dimen/px_41"
        android:paddingTop="@dimen/px_27"
        android:textColor="@color/action_sheet_gray"
        android:textSize="@dimen/px_36"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/sLayout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none" >

        <LinearLayout
            android:id="@+id/lLayout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/txt_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_131"
        android:layout_marginTop="@dimen/px_8"
        android:background="@drawable/action_sheet_single_selector"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/text_2"
        android:textSize="@dimen/px_44"
        android:textStyle="bold" />

</LinearLayout>