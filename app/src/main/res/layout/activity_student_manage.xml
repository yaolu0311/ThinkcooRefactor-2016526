<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/color_title"
    android:layout_height="match_parent"
    tools:context="com.thinkcoo.mobile.presentation.views.activitys.StudentManageActivity">
    <include
        android:id="@+id/include"
        layout="@layout/layout_title"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/px_15"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:layout_below="@id/include"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"

        android:id="@+id/topLayout"
        android:layout_height="@dimen/px_110"
        >
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text="班组"
            />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/qunliao"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群聊 "
            />
        </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:layout_width="match_parent"
        android:id="@+id/gridLayout"
        android:layout_below="@id/topLayout"
        android:layout_height="wrap_content"
        >
        <android.support.v7.widget.RecyclerView
            android:paddingLeft="@dimen/px_40"
            android:paddingRight="@dimen/px_40"
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            />
    </RelativeLayout>


    <RelativeLayout
        android:background="@color/white"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:layout_marginTop="@dimen/px_15"
        android:layout_marginBottom="@dimen/px_3"
        android:layout_width="match_parent"
        android:id="@+id/millleLayout"
        android:gravity="center_vertical"
        android:layout_below="@id/gridLayout"
        android:layout_height="@dimen/px_110"
        >
        <TextView

            android:layout_width="wrap_content"
            android:id="@+id/group"
            android:layout_height="wrap_content"
            android:text="@string/group"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/group"
            android:textColor="@color/holo_red_light"
            android:id="@+id/text_access_yet"
            />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/text_edite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            />
    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:background="@color/white"
        android:paddingLeft="@dimen/px_40"
        android:paddingRight="@dimen/px_40"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/millleLayout"
        android:scrollbars="none"
        />
    <RelativeLayout
        android:background="@color/white"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:id="@+id/bottom_layout"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/px_110"
        >

        <ImageView
            android:src="@mipmap/add_group"
            android:id="@+id/add_img"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        </ImageView>
        <TextView
            android:layout_marginLeft="@dimen/px_10"
            android:layout_toRightOf="@id/add_img"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:id="@+id/text_manual_add"
            android:layout_height="wrap_content"
            android:text="手动添加"
            />

    </RelativeLayout>
   </RelativeLayout>

