<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    android:background="@drawable/train_bgshape_pop">

    <RelativeLayout
        android:id="@+id/rl_myappointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="@dimen/px_131"
            android:layout_height="@dimen/px_131"
            android:layout_marginLeft="@dimen/px_11"
            android:padding="@dimen/px_33"
            android:src="@mipmap/myappointment" />

        <TextView
            android:id="@+id/textview_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_44"
            android:layout_toRightOf="@+id/img1"
            android:gravity="right"
            android:text="@string/train_myappointment"
            android:textColor="@color/white"
            android:textSize="@dimen/px_36" />
    </RelativeLayout>

    <View
        android:id="@+id/view01"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_3"
        android:layout_below="@+id/rl_myappointment"
        android:background="#686868" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_3"
        android:layout_below="@+id/rl_myappointment"
        android:layout_marginLeft="@dimen/px_44"
        android:layout_marginRight="@dimen/px_44"
        android:background="#9e9e9e" />

    <RelativeLayout
        android:id="@+id/rl_train_mycollection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view01">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="@dimen/px_131"
            android:layout_height="@dimen/px_131"
            android:layout_marginLeft="@dimen/px_11"
            android:padding="@dimen/px_33"
            android:src="@mipmap/train_collection_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_44"
            android:layout_toRightOf="@+id/img2"
            android:gravity="right"
            android:text="@string/train_mycollection"
            android:textColor="@color/white"
            android:textSize="@dimen/px_36"

            />
    </RelativeLayout>

</RelativeLayout>