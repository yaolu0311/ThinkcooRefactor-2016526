<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/status_bg">

    <include
        android:id="@+id/include"
        layout="@layout/layout_title"/>

    <ImageView
        android:id="@+id/tv_add_status"
        android:layout_width="@dimen/px_136"
        android:layout_height="@dimen/px_136"
        android:layout_below="@+id/include"
        android:layout_marginLeft="@dimen/px_76"
        android:layout_marginRight="@dimen/px_43"
        android:layout_marginTop="@dimen/px_40"
        android:background="@mipmap/add_status"
        android:gravity="center"
        android:textColor="@color/white"/>

    <ListView
        android:id="@+id/lv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_add_status"
        android:layout_marginBottom="@dimen/px_80"
        android:layout_marginTop="@dimen/px_13"
        android:background="#00000000"
        android:divider="@null"
        android:scrollbars="none"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/include"
        android:layout_marginRight="@dimen/px_13"
        android:layout_marginTop="@dimen/px_13"
        android:text="@string/personal_ac_status_notice"
        android:textColor="@color/text_3"
        android:textSize="@dimen/px_32"/>

</RelativeLayout>