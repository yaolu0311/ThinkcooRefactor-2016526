<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="40dp">
        <ImageButton
            android:id="@+id/add_resource"
            android:src="@drawable/schedule_add_more_time"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_toLeftOf="@+id/add_resource"
            android:text="@string/relative_resource"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/px_44"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:background="@color/line"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/resource_recycler_view"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>