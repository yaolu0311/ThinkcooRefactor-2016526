<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical">

<LinearLayout
    android:id="@+id/rowBG"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:gravity="right"
    android:orientation="horizontal">


    <RelativeLayout

        android:layout_width="90dp"
        android:layout_height="@dimen/px_197"
        android:background="#a2cbff"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btn_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/delete_button"
            android:gravity="center"
            />
    </RelativeLayout>
</LinearLayout>


<RelativeLayout
    android:id="@+id/rowFG"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_197"
    android:background="@color/white"
    android:paddingLeft="@dimen/px_43"
    android:paddingRight="@dimen/px_43">

    <ImageView
        android:id="@+id/iv_harvest_image"
        android:layout_width="@dimen/px_131"
        android:layout_height="@dimen/px_131"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/px_27"
        android:layout_marginTop="@dimen/px_27"
        android:scaleType="fitXY"
        android:src="@mipmap/my_harvest_head"/>


    <TextView
        android:id="@+id/tv_harvest_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_harvest_image"
        android:layout_marginLeft="@dimen/px_43"
        android:layout_marginRight="@dimen/px_131"
        android:layout_toRightOf="@+id/iv_harvest_image"
        android:singleLine="true"
        android:textColor="@color/text_1"
        android:textSize="@dimen/px_44"/>


    <TextView
        android:id="@+id/tv_harvest_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_harvest_image"
        android:layout_alignLeft="@id/tv_harvest_name"
        android:layout_marginRight="@dimen/px_131"
        android:singleLine="true"
        android:textColor="@color/text_2"
        android:textSize="@dimen/px_36"/>

    <ImageView
        android:id="@+id/iv_harvest_arrow"
        android:layout_width="@dimen/px_68"
        android:layout_height="@dimen/px_68"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/px_19"
        android:scaleType="centerInside"
        android:src="@mipmap/arrow"/>

</RelativeLayout>




<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_alignParentBottom="true"
    android:background="#67676767"
    android:elevation="5dp"/>
</RelativeLayout>
