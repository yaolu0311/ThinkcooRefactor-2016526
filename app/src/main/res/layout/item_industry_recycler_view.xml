<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_industry_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_industry_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_130"
            android:layout_marginLeft="@dimen/px_54"
            android:layout_marginTop="@dimen/px_24"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/text_2"
            android:textSize="@dimen/px_40"
            android:layout_toLeftOf="@+id/iv_industry_checked"
            android:layout_marginRight="@dimen/px_20"/>

        <ImageView
            android:id="@+id/iv_industry_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_68"
            android:visibility="visible"
            android:src="@mipmap/icon_orange_checked" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/background" />

</LinearLayout>
