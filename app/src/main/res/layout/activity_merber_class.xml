<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
        android:id="@+id/include_title"
        layout="@layout/layout_title"
        />
    <LinearLayout
        android:id="@+id/ac_lesson_group"

        android:layout_width="match_parent"
        android:layout_height="@dimen/px_134"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ac_lesson_group_imageone"
                android:layout_width="@dimen/px_100"
                android:layout_height="@dimen/px_100"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/px_14"
                android:layout_marginLeft="@dimen/px_42"
                android:layout_marginRight="@dimen/px_14"
                android:layout_marginTop="@dimen/px_14" />

            <ImageView
                android:id="@+id/ac_lesson_group_imagetwo"
                android:layout_width="@dimen/px_100"
                android:layout_height="@dimen/px_100"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/px_14" />

            <ImageView
                android:id="@+id/ac_lesson_group_imagethree"
                android:layout_width="@dimen/px_100"
                android:layout_height="@dimen/px_100"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/px_14" />

            <ImageView
                android:id="@+id/ac_lesson_group_imagefour"
                android:layout_width="@dimen/px_100"
                android:layout_height="@dimen/px_100"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/px_14" />
        </LinearLayout>

        <Button
            android:id="@+id/ac_lesson_group_more"
            android:layout_width="0dp"
            android:layout_height="@dimen/px_92"
            android:layout_marginLeft="@dimen/px_28"
            android:layout_marginRight="@dimen/px_28"
            android:layout_weight="1"
            android:background="@drawable/ac_shape_but_line_gray"
            android:text="@string/more"
            android:textSize="@dimen/px_36" />

        <Button
            android:id="@+id/ac_lesson_group_but"
            android:layout_width="0dp"
            android:layout_height="@dimen/px_92"
            android:layout_marginRight="@dimen/px_42"
            android:layout_weight="1"
            android:background="@drawable/ac_shape_but_line_gray"
            android:text="@string/group_chat"
            android:textSize="@dimen/px_36" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_centerHorizontal="true"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ac_lesson_group"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:scrollbars="none" />

</LinearLayout>