<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include"
        layout="@layout/layout_edit_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include" >

        <RelativeLayout
            android:id="@+id/layout_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_134"
            android:background="@color/white"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_time_notice"
                android:layout_width="@dimen/view_110"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_16"
                android:text="@string/time"
                android:textColor="@color/text_1"
                android:textSize="@dimen/px_44" />

            <TextView
                android:id="@+id/tv_experience_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="27dp"
                android:textColor="@color/text_2"
                android:gravity="right"
                android:maxLines="1"
                android:layout_toRightOf="@+id/tv_time_notice"
                android:textSize="@dimen/px_36" />

            <ImageView
                android:id="@+id/tv_arrow_time"
                style="@style/dayu_icon"
                android:layout_marginRight="0dp" />
        </RelativeLayout>

        <View
            android:id="@+id/line_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:layout_below="@+id/layout_time"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/ac_state_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_134"
            android:layout_below="@+id/line_2"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="@dimen/px_300"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_16"
                android:text="@string/content"
                android:textColor="@color/text_1"
                android:textSize="@dimen/px_44" />
        </RelativeLayout>

        <View
            android:id="@+id/line_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:layout_below="@+id/ac_state_content"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/line_3"
            android:background="@color/white"
            android:gravity="center_vertical" >

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="top"
                android:hint="@string/hint_experience"
                android:maxLength="200"
                android:minHeight="150dp"
                android:padding="@dimen/view_16"
                android:textColor="@color/text_2"
                android:textColorHint="@color/text_3"
                android:textSize="@dimen/px_36" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>