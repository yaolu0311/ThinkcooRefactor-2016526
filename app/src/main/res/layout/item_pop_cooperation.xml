<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
     android:background="@drawable/train_bgshape_pop"
    
     >

   <RelativeLayout 
       android:id="@+id/rl_layout_collect"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
        <ImageView 
           android:id="@+id/tv_image_collect"
           android:layout_width="@dimen/px_131"
           android:layout_height="@dimen/px_131"
           android:src="@mipmap/mycollection_icon"
           android:padding="@dimen/px_33"
           android:layout_marginLeft="@dimen/px_11"
           />
       
       <TextView

           android:id="@+id/ac_text01"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/train_mycollection"
           android:layout_alignParentRight="true"
           android:gravity="right"
           android:layout_toRightOf="@+id/tv_image_collect"
           android:textColor="@color/white"
           android:textSize="@dimen/px_36"
           android:layout_marginRight="@dimen/px_44"
           android:layout_centerVertical="true" />

   </RelativeLayout>
   
   <View 
       android:id="@+id/view01"
       android:layout_width="match_parent"
       android:layout_height="@dimen/px_3"
       android:background="#686868"
       android:layout_below="@+id/rl_layout_collect"
       />
   
   <View 
       android:layout_width="match_parent"
       android:layout_height="@dimen/px_3"
       android:background="#9e9e9e"
       android:layout_below="@+id/rl_layout_collect"
       android:layout_marginLeft="@dimen/px_44"
       android:layout_marginRight="@dimen/px_44"
       />
    
   <RelativeLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/rl_apply_layout"
       android:layout_below="@+id/view01"     >
       
      <ImageView 
          android:id="@+id/ac_imageview_apply"
          android:layout_width="@dimen/px_131"
          android:layout_height="@dimen/px_131"
          android:src="@mipmap/myapplyicon"
           android:padding="@dimen/px_33"
           android:layout_marginLeft="@dimen/px_11"
          />
       <TextView 
           android:id="@+id/ac_text02"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/train_myapply"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:layout_marginRight="@dimen/px_44"
           android:layout_toRightOf="@+id/ac_imageview_apply"
           android:textColor="@color/white"
           android:textSize="@dimen/px_36"
           android:layout_centerVertical="true"
           />
   </RelativeLayout>
    
</RelativeLayout>