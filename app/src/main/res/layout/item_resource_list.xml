<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:padding="@dimen/px_20"
                android:background="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_resource_image"
        android:layout_width="@dimen/px_148"
        android:layout_height="@dimen/px_148"
        android:layout_marginLeft="@dimen/px_44"
        android:layout_marginRight="@dimen/px_20"
        android:src="@mipmap/my_harvest_head"/>

    <TextView
        android:text="title"
        android:layout_toRightOf="@id/iv_resource_image"
        android:id="@+id/tv_resource_title"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="information"
        android:layout_alignLeft="@id/tv_resource_title"
        android:layout_marginTop="@dimen/px_10"
        android:layout_below="@id/tv_resource_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    
    <TextView
        android:text="time"
        android:layout_alignLeft="@id/tv_resource_title"
        android:layout_alignBottom="@id/iv_resource_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    
    <CheckBox
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>