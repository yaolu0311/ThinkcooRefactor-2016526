<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/work_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/work_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_134"
            android:background="@color/white"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/work_time_time"
                android:layout_width="@dimen/px_300"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_43"
                android:text="时间"
                android:textColor="@color/text_1"
                android:textSize="@dimen/px_44"/>

            <TextView
                android:id="@+id/work_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px_73"
                android:textColor="@color/text_2"
                android:textSize="@dimen/px_36"/>

            <ImageView
                android:id="@+id/ac_work_time_flag"
                style="@style/dayu_icon"
                android:layout_marginRight="0dp"/>
        </RelativeLayout>

        <View
            android:id="@+id/ac_line_one"
            style="@style/view_line_edge"
            android:layout_below="@+id/work_time"/>

        <RelativeLayout
            android:id="@+id/work_unit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_134"
            android:layout_below="@+id/ac_line_one"
            android:background="@color/white"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/work_unit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_43"
                android:text="@string/work_unit"
                android:textColor="@color/text_1"
                android:textSize="@dimen/px_44"/>

            <EditText
                android:id="@+id/work_unit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_90"
                android:layout_toRightOf="@+id/work_unit_name"
                android:background="@null"
                android:gravity="top|right"
                android:maxLength="18"
                android:paddingRight="@dimen/px_76"
                android:textColor="@color/text_2"
                android:textSize="@dimen/px_36"/>
        </RelativeLayout>


        <View
            android:id="@+id/ac_line_onne"
            style="@style/view_line_edge"
            android:layout_below="@+id/work_unit"/>

        <RelativeLayout
            android:id="@+id/work_employee_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_134"
            android:layout_below="@+id/ac_line_onne"
            android:background="@color/white"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/work_employee_id_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_43"
                android:text="@string/agent_id"
                android:textColor="@color/text_1"
                android:textSize="@dimen/px_44"/>

            <EditText
                android:id="@+id/work_employee_id_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_90"
                android:layout_toRightOf="@+id/work_employee_id_name"
                android:background="@null"
                android:gravity="top|right"
                android:maxLength="18"
                android:paddingRight="@dimen/px_76"
                android:textColor="@color/text_2"
                android:textSize="@dimen/px_36"/>
        </RelativeLayout>

        <View
            android:id="@+id/ac_line_two"
            style="@style/view_line_edge"
            android:layout_below="@+id/work_employee_id"/>

        <RelativeLayout
            android:id="@+id/work_business"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_134"
            android:layout_below="@+id/ac_line_two"
            android:background="@color/white"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/work_business_name"
                android:layout_width="@dimen/px_300"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_43"
                android:text="@string/industry_direction"
                android:textColor="@color/text_1"
                android:textSize="@dimen/px_44"/>

            <TextView
                android:id="@+id/work_business_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_27"
                android:layout_marginRight="@dimen/px_73"
                android:layout_toRightOf="@+id/work_business_name"
                android:ellipsize="end"
                android:gravity="top|right"
                android:singleLine="true"
                android:textColor="@color/text_2"
                android:textSize="@dimen/px_36"/>

            <ImageView
                android:id="@+id/ac_work_name_two_flag"
                style="@style/dayu_icon"
                android:layout_marginRight="0dp"/>
        </RelativeLayout>

        <View
            android:id="@+id/ac_line_three"
            style="@style/view_line_edge"
            android:layout_below="@+id/work_business"/>

        <RelativeLayout
            android:id="@+id/work_department"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_134"
            android:layout_below="@+id/ac_line_three"
            android:background="@color/white"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/work_department_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_43"
                android:text="@string/work_department"
                android:textColor="@color/text_1"
                android:textSize="@dimen/px_44"/>

            <EditText
                android:id="@+id/work_department_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_90"
                android:layout_toRightOf="@+id/work_department_name"
                android:background="@null"
                android:gravity="top|right"
                android:hint=""
                android:maxLength="18"
                android:paddingRight="@dimen/px_76"
                android:textColor="@color/text_2"
                android:textSize="@dimen/px_36"/>
        </RelativeLayout>

        <View
            android:id="@+id/ac_line_four"
            style="@style/view_line_edge"
            android:layout_below="@+id/work_department"/>

        <RelativeLayout
            android:id="@+id/work_job"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_134"
            android:layout_below="@+id/ac_line_four"
            android:background="@color/white"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/work_job_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_43"
                android:text="@string/work_job"
                android:textColor="@color/text_1"
                android:textSize="@dimen/px_44"/>

            <EditText
                android:id="@+id/work_job_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_90"
                android:layout_toRightOf="@+id/work_job_name"
                android:background="@null"
                android:gravity="top|right"
                android:hint=""
                android:maxLength="18"
                android:paddingRight="@dimen/px_76"
                android:textColor="@color/text_2"
                android:textSize="@dimen/px_36"/>
        </RelativeLayout>

        <View
            android:id="@+id/ac_line_five"
            style="@style/view_line_edge"
            android:layout_below="@+id/work_job"/>

        <RelativeLayout
            android:id="@+id/gwzz_work_num"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_134"
            android:layout_below="@+id/ac_line_five"
            android:background="@color/white"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/ac_work_num_name"
                android:layout_width="@dimen/px_300"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_43"
                android:text="@string/job_responsibility"
                android:textColor="@color/text_1"
                android:textSize="@dimen/px_44"/>

            <TextView
                android:id="@+id/gwzz_work_time_textt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_27"
                android:layout_marginRight="@dimen/px_73"
                android:ellipsize="end"
                android:maxEms="13"
                android:singleLine="true"
                android:textColor="@color/text_2"
                android:textSize="@dimen/px_36"/>

            <ImageView
                android:id="@+id/ac_work_num_flag"
                style="@style/dayu_icon"
                android:layout_marginRight="0dp"/>
        </RelativeLayout>

        <View
            android:id="@+id/ac_line_six"
            style="@style/view_line_edge"
            android:layout_below="@+id/gwzz_work_num"/>

        <RelativeLayout
            android:id="@+id/work_experience"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_134"
            android:layout_below="@+id/ac_line_six"
            android:background="@color/white"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/work_experience_name"
                android:layout_width="@dimen/px_300"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_43"
                android:text="@string/work_experience"
                android:textColor="@color/text_1"
                android:textSize="@dimen/px_44"/>

            <TextView
                android:id="@+id/work_experience_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_27"
                android:layout_marginRight="@dimen/px_68"
                android:hint=""
                android:maxLength="15"
                android:singleLine="true"
                android:textColor="@color/text_2"
                android:textSize="@dimen/px_36"/>

            <ImageView
                android:id="@+id/work_experience_flag"
                style="@style/dayu_icon"
                android:layout_marginRight="0dp"
                android:visibility="gone"
                />
        </RelativeLayout>

        <View
            android:id="@+id/ac_line_seven"
            style="@style/view_line_edge"
            android:layout_below="@+id/work_experience"/>
    </RelativeLayout>

</ScrollView>
