<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_in"
        android:layout_marginTop="@dimen/px_16"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_160"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="@dimen/px_197"
            android:background="#a2cbff"
            android:gravity="center">

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/delete_button"
                android:gravity="center" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_out"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_160"
        android:background="@color/white"
        android:layout_marginTop="@dimen/px_16"
        android:paddingLeft="@dimen/px_43"
        android:paddingRight="@dimen/px_43">

        <ImageView
            android:id="@+id/iv_usericon"
            android:layout_width="@dimen/px_70"
            android:layout_height="@dimen/px_70"
            android:src="@mipmap/username"
            android:layout_alignBottom="@+id/tv_classname"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tv_useridname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="A_小李"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_alignTop="@+id/tv_classname"
            android:layout_toEndOf="@+id/iv_usericon"
            android:layout_toRightOf="@+id/iv_usericon" />

        <TextView
            android:id="@+id/tv_classname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="石油工程1501"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/tv_studentid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXXXXXX"
            android:layout_alignBottom="@+id/tv_classname"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

</RelativeLayout>
