<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/text_dialog_input_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_130"
        android:layout_margin="@dimen/px_43"
        android:gravity="center_vertical"
        android:textColor="@color/color_gray"
        android:textSize="@dimen/px_44" />

    <EditText
        android:id="@+id/edit_dialog_input_skill"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_130"
        android:layout_below="@id/text_dialog_input_title"
        android:layout_marginBottom="@dimen/px_43"
        android:layout_marginLeft="@dimen/px_43"
        android:layout_marginRight="@dimen/px_43"
        android:background="@drawable/user_gray_shape"
        android:maxLength="20"
        android:paddingLeft="@dimen/view_8"
        android:textColor="@color/text_2"
        android:textSize="@dimen/px_44" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:layout_below="@+id/edit_dialog_input_skill"
        android:layout_marginTop="@dimen/px_43"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_130"
        android:layout_below="@+id/view"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_dialog_yes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/color_smoke"
            android:textSize="@dimen/px_44" />

        <View
            android:layout_width="@dimen/px_1"
            android:layout_height="match_parent"
            android:background="@color/line" />

        <TextView
            android:id="@+id/text_dialog_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/color_smoke"
            android:textSize="@dimen/px_44" />
    </LinearLayout>

</RelativeLayout>