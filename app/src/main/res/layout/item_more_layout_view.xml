<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_repeat_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="选择重复周期"
        android:padding="@dimen/px_44"
        android:paddingLeft="@dimen/px_16"
        android:textColorHint="@color/text_3"
        android:textSize="@dimen/text_middle"/>

    <View
        android:layout_width="match_parent"
        android:background="@color/line"
        android:layout_height="@dimen/px_1"/>

    <EditText
        android:id="@+id/et_organizition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:gravity="center|left"
        android:hint="组织(单位)"
        android:padding="@dimen/px_44"
        android:textColorHint="@color/text_3"
        android:textSize="@dimen/text_middle"/>


    <View
        android:layout_width="match_parent"
        android:background="@color/line"
        android:layout_height="@dimen/px_1"/>
        <TextView
            android:id="@+id/tv_reminder"
            android:hint="@string/reminder_time"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:padding="@dimen/px_44"
            android:textColorHint="@color/text_3"
            android:paddingLeft="@dimen/px_16"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_middle"
            android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:background="@color/line"
        android:layout_height="@dimen/px_1"/>

    <EditText
        android:id="@+id/et_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:gravity="center|left"
        android:hint="@string/remark"
        android:padding="@dimen/px_44"
        android:textColorHint="@color/text_3"
        android:layout_marginBottom="@dimen/px_20"
        android:textSize="@dimen/text_middle"/>

   <!-- 更多时段的容器-->
    <LinearLayout
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/more_time_layout_content_view"
        android:orientation="vertical"
        />

    <RelativeLayout
        android:id="@+id/add_more_time"
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@color/white"
        android:layout_weight="0"
        android:visibility="visible"
        android:layout_height="50dp">

        <ImageView
            android:background="@drawable/schedule_add_more_time"
            android:id="@+id/ib_add_more"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_toRightOf="@id/ib_add_more"
            android:layout_marginLeft="@dimen/px_30"
            android:textSize="@dimen/px_44"
            android:gravity="center_vertical"
            android:text="@string/add_more_time_internal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </RelativeLayout>

</LinearLayout>