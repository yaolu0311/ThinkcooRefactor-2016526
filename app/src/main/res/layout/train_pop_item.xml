<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/popup_background_shape" >

    <RelativeLayout
        android:id="@+id/rl_appointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/img1"
            android:layout_width="@dimen/px_131"
            android:layout_height="@dimen/px_131"
            android:layout_marginLeft="@dimen/px_11"
            android:padding="@dimen/px_33"
            android:src="@drawable/train_my_appointment" />

        <TextView
            android:id="@+id/textview_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_44"
            android:gravity="right"
            android:text="@string/train_my_appointment"
            android:textColor="@color/white"
            android:textSize="@dimen/px_36" />
    </RelativeLayout>

    <View
        android:id="@+id/view01"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_3"
        android:layout_below="@+id/rl_appointment"
        android:background="#686868" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_3"
        android:layout_below="@+id/rl_appointment"
        android:layout_marginLeft="@dimen/px_44"
        android:layout_marginRight="@dimen/px_44"
        android:background="#9e9e9e" />

    <RelativeLayout
        android:id="@+id/rl_collections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view01" >

        <ImageView
            android:id="@+id/img2"
            android:layout_width="@dimen/px_131"
            android:layout_height="@dimen/px_131"
            android:layout_marginLeft="@dimen/px_11"
            android:padding="@dimen/px_33"
            android:src="@drawable/train_collection_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/train_my_collections"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px_44"
            android:textColor="@color/white"
            android:textSize="@dimen/px_36"
            android:layout_centerVertical="true"

            />
    </RelativeLayout>

</RelativeLayout>