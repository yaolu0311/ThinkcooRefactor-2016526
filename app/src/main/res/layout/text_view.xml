<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_team_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_120"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:paddingLeft="@dimen/px_34"
        android:paddingRight="@dimen/px_20"
        android:textColor="@color/index_color"
        android:textColorHint="@color/font6"
        android:background="@color/adapter_header_color"
        android:textSize="@dimen/px_40">
    </TextView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/background" />

</LinearLayout>

