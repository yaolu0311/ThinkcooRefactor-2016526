<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="@dimen/px_20"
        android:layout_height="@dimen/px_134">

        <TextView
            android:id="@+id/more_time_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/px_44"
            android:gravity="center_vertical"
            android:textColor="@color/text_2"
            android:textSize="@dimen/text_small_ll"
            android:text="@string/time_interval_number"/>

        <ImageButton
            android:id="@+id/ib_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px_44"
            android:background="@color/white"
            android:src="@drawable/schedule_delete_more_time"/>
    </RelativeLayout>


    <View
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"/>

    <include
        layout="@layout/item_schedule"/>

    <View
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"/>

    <TextView
        android:id="@+id/repeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:hint="选择重复周期"
        android:textColor="@color/text_2"
        android:padding="@dimen/px_44"
        android:paddingLeft="@dimen/px_16"/>
    <View
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"/>


</LinearLayout>