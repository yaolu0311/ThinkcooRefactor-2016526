<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background" >

    <include
        android:id="@+id/include_title"
        layout="@layout/layout_title" />

    <RelativeLayout
        android:id="@+id/rl_updata_headPortrait"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_272"
        android:layout_below="@+id/include_title"
        android:layout_marginTop="@dimen/px_44"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/px_44" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/personal_myinfo_tx"
            android:textColor="@color/text_1"
            android:textSize="@dimen/px_44" />
        <ImageView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/iv_headPortrait"
            android:layout_width="@dimen/px_195"
            android:layout_height="@dimen/px_195"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_21"
            android:layout_toLeftOf="@+id/iv_icon1"
         />

        <ImageView
            android:id="@+id/iv_icon1"
            style="@style/dayu_icon"
            android:layout_marginRight="0dp" />
    </RelativeLayout>

    <View
        android:id="@+id/personal_view_tm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:layout_below="@+id/rl_updata_headPortrait"
        android:background="@color/line" />

    <RelativeLayout
        android:id="@+id/rl_myInfo_signature"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_130"
        android:layout_below="@+id/personal_view_tm"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/px_44" >

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/gexingqianming"
            android:textColor="@color/text_1"
            android:textSize="@dimen/px_44" />

        <TextView
            android:id="@+id/tv_signature_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="42dp"
            android:layout_toRightOf="@+id/tv"
            android:gravity="right|center"
            android:singleLine="true"
            android:textColor="@color/text_2"
            android:textSize="@dimen/px_36" />

        <ImageView
            android:id="@+id/iv_icon2"
            style="@style/dayu_icon"
            android:layout_marginRight="0dp" />
    </RelativeLayout>

    <View
        android:id="@+id/personal_view_qm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:layout_below="@+id/rl_myInfo_signature"
        android:background="@color/line" />

    <RelativeLayout
        android:id="@+id/rl_myInfo_username"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_130"
        android:layout_below="@+id/personal_view_qm"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/px_44" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/xingming"
            android:textColor="@color/text_1"
            android:textSize="@dimen/px_44" />

        <ImageView
            android:id="@+id/imageView1"
            style="@style/dayu_icon"
            android:layout_marginRight="0dp" />

        <TextView
            android:id="@+id/tv_myinfo_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_marginRight="@dimen/px_24"
            android:layout_toLeftOf="@+id/imageView1"
            android:text=""
            android:textColor="@color/text_2"
            android:textSize="@dimen/px_36" />
    </RelativeLayout>

    <View
        android:id="@+id/personal_view_xm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:layout_below="@+id/rl_myInfo_username"
        android:background="@color/line" />

    <RelativeLayout
        android:id="@+id/rl_myInfo_sex"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_130"
        android:layout_below="@+id/personal_view_xm"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/px_44" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/xingbie"
            android:textColor="@color/text_1"
            android:textSize="@dimen/px_44" />

        <ImageView
            android:id="@+id/imageView2"
            style="@style/dayu_icon"
            android:layout_marginRight="0dp" />

        <TextView
            android:id="@+id/tv_myinfo_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/imageView2"
            android:text=""
            android:textColor="@color/text_2"
            android:textSize="@dimen/px_36" />
    </RelativeLayout>

    <View
        android:id="@+id/line_10"
        style="@style/view_line_edge"
        android:layout_below="@+id/rl_myInfo_sex" />

    <View
        android:id="@+id/line_11"
        style="@style/view_line_edge"
        android:layout_below="@+id/line_10"
        android:layout_marginTop="@dimen/px_44" />

    <RelativeLayout
        android:id="@+id/rl_more_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_130"
        android:layout_below="@+id/line_11"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/px_44" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/personal_basic_info"
            android:textColor="@color/text_1"
            android:textSize="@dimen/px_44" />

        <ImageView
            style="@style/dayu_icon"
            android:layout_marginRight="0dp" />
    </RelativeLayout>

    <View
        android:id="@+id/personal_view_tem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:layout_below="@+id/rl_more_info"
        android:background="@color/line" />

</RelativeLayout>