<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical" >


    <RelativeLayout
        android:id="@+id/ac_home_layy"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_448" >

        <FrameLayout
            android:name="com.thinkcoo.mobile.presentation.views.fragment.TradeMainBannerFragment"
            android:id="@+id/fragment_cycle_viewpager_contentt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_490" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ac_lay_res"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ac_home_layy"
        android:background="@color/white" >

        <LinearLayout
            android:id="@+id/ac_find_but"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_134"
            android:layout_marginTop="@dimen/px_20"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ac_find_image01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/trade" />

            <ImageView
                android:id="@+id/ac_find_image02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/findwork" />

            <ImageView
                android:id="@+id/ac_find_image03"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/cultivate" />

            <ImageView
                android:id="@+id/ac_find_image04"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/collaborate" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ac_find_but"
            android:layout_marginTop="@dimen/px_10"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/ac_find_text01"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/font2"
                android:textSize="@dimen/px_32" />

            <TextView
                android:id="@+id/ac_find_text02"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/font2"
                android:textSize="@dimen/px_32" />

            <TextView
                android:id="@+id/ac_find_text03"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/font2"
                android:textSize="@dimen/px_32" />

            <TextView
                android:id="@+id/ac_find_text04"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/font2"
                android:textSize="@dimen/px_32" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/ac_line20"
        style="@style/view_line_edge"
        android:layout_below="@+id/ac_lay_res" />

</RelativeLayout>