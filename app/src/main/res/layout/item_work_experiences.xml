<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <com.marshalchen.ultimaterecyclerview.swipe.SwipeLayout
        android:id="@id/recyclerview_swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="@dimen/px_160"
            android:background="#a2cbff"
            android:gravity="center">

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/delete_button"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_160"
            android:background="@color/white"
            android:paddingLeft="@dimen/px_43"
            android:paddingRight="@dimen/px_20">

            <TextView
                android:id="@+id/tv_experience_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_20"
                android:layout_marginTop="@dimen/px_20"
                android:layout_marginRight="@dimen/px_20"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/text_1"
                android:textSize="@dimen/px_40" />

            <TextView
                android:id="@+id/tv_experience_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_experience_content"
                android:layout_marginTop="@dimen/px_10"
                android:layout_marginBottom="@dimen/px_20"
                android:layout_marginRight="14dp"
                android:textColor="@color/text_2"
                android:textSize="@dimen/px_32" />

        </RelativeLayout>
    </com.marshalchen.ultimaterecyclerview.swipe.SwipeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:layout_below="@+id/tv_experience_time"
        android:background="@color/background" />

</LinearLayout>