<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_150"
    android:background="@color/draw_but"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="@dimen/px_131"
        android:layout_height="@dimen/px_131"
        android:layout_centerVertical="true"
        android:padding="@dimen/px_33"
        android:layout_marginLeft="@dimen/px_11"
        android:scaleType="centerInside"
        android:src="@mipmap/tittle_back" />

    <ImageView
        android:id="@+id/newMeg"
        android:layout_width="@dimen/px_27"
        android:layout_height="@dimen/px_27"
        android:layout_alignRight="@+id/img_back"
        android:layout_alignTop="@+id/img_back"
        android:scaleType="centerInside"
        android:src="@mipmap/red_circle"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_titleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/edit"
        android:textColor="@color/white"
        android:textSize="@dimen/px_60"
        android:paddingLeft="@dimen/px_136"
        android:paddingRight="@dimen/px_136"
        android:visibility="gone"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/tv_titleComplete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/px_11"
        android:gravity="center"
        android:padding="@dimen/px_33"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textSize="@dimen/px_50"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_titleCompletetwo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/px_11"
        android:gravity="center"
        android:padding="@dimen/px_33"
        android:text="@string/complete"
        android:textColor="@color/white"
        android:textSize="@dimen/px_50"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_titleComplete"
        android:layout_width="@dimen/px_68"
        android:layout_height="@dimen/px_68"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/px_44"
        android:scaleType="centerInside"
        android:src="@mipmap/more"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ac_activiindex_search"
        android:layout_width="@dimen/px_68"
        android:layout_height="@dimen/px_68"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/px_164"
        android:scaleType="centerInside"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ac_activiindex_add"
        android:layout_width="@dimen/px_68"
        android:layout_height="@dimen/px_68"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/px_44"
        android:scaleType="centerInside"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/index_more"
        style="@style/icon"
        android:layout_width="@dimen/px_153"
        android:layout_height="@dimen/px_153"
        android:layout_alignParentRight="true"
        android:padding="@dimen/px_44"
        android:scaleType="centerInside"
        android:visibility="gone"
        android:src="@mipmap/more" />

</RelativeLayout>