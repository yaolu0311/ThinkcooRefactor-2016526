<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_height="fill_parent"
    android:padding="@dimen/px_20"
 >


            <ImageView
                android:gravity="center"
                android:id="@+id/iv_headPortrait"
                android:layout_width="@dimen/px_60"
                android:layout_height="@dimen/px_60"
                 >
            </ImageView>
            <TextView
                android:layout_marginLeft="@dimen/px_50"
                android:layout_toRightOf="@id/iv_headPortrait"
                android:singleLine="true"
                android:id="@+id/name"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:minWidth="@dimen/px_150"
                android:maxWidth="@dimen/px_150"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="111111111111111111111111" >
            </TextView>

            <TextView
                android:layout_toRightOf="@id/name"
                android:gravity="center_vertical"
                android:id="@+id/merber_id"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="222222222222222222222222" >
            </TextView>
            <CheckBox
               android:layout_alignParentRight="true"

                android:layout_width="wrap_content"
                android:id="@+id/is_check"
                android:visibility="invisible"
                android:layout_height="wrap_content"
                 >
            </CheckBox>

</RelativeLayout>